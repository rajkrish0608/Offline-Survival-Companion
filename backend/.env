NODE_ENV=development
PORT=3000

# Database
DB_PATH=./data/offline_survival.db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://offline-survival.app

# CDN
CDN_BASE_URL=https://cdn.offline-survival.app

# Firebase (optional)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# AWS S3 (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=offline-survival-packs

# Redis (optional, for Bull queue)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
